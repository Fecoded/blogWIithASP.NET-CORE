@model IEnumerable<WebBlog.Models.BlogModel>

@{
  ViewData["Title"] = "Details";
}

<div class="container">
<h1>All Post</h1>
     <table class="table">
      <thead>
        <tr>
        <th>TItle</th>
        <th>Description</th>
        <th>Image</th>
        <th></th>
        </tr>
      </thead>
      <tbody>
      @foreach (var post in Model){
        <tr>
          <td>@Html.DisplayFor(modelItem => post.Title)</td>
          <td>@Html.DisplayFor(modelItem => post.Description)</td>
          <td><img src="~/img/@post.ImagePath" asp-append-version="true" width="40" height="40"/></td>
          <td>
              <a asp-action="Edit" asp-route-id="@post.Id">Edit</a>
              <a asp-action="Delete" asp-route-id="@post.Id">Delete</a>
          </td>
        </tr>
      }
      </tbody>  
     
    </table>
    </div>
